<%= render 'partial/navbar' %>
<div class="container">
  <div class="col-md-3">
    <!-- vertical-navbar -->
    <%= render 'partial/verticalnavbar'%>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="text-center">
          <span style="font-size:24px;">ゴール・ターゲット設定</span>
        </div>
      </div>

      <div class="panel-body">

        <%= form_for @profile do |f| %>

            <div class="row">
              <div class="col-md-12 select">
                <div class="form-group">
                  <label>トレーニングのタイプ</label>
                  <%= f.select :direction, [["美容・健康","美容・健康"], ["筋力アップ","筋力アップ"], ["ベストボディ","ベストボディ"], ["フィジーク","フィジーク"], ["ボディビル","ボディビル"], ["ウェイトリフティング","ウエィトリフティング"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
                </div>
              </div>
            </div>
            <br>

            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label>ゴール</label>
                  <%= f.text_area :goal_text, rows: 8, placeholder: "トレーニングの目的を記載しましょう", class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label>大会</label>
                  <%= f.text_field :competition, placeholder: "直近出場予定の大会", class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <div class="item-left-end">
                    <label>予定日</label>
                  </div>
                  <div class="item-right">
                    <%= f.text_field :comp_date, placeholder: "予定日", id: "datepicker" %>
                  </div>
                </div>
              </div>
            </div>

            <div class="actions align-right">
              <%= f.submit "更新", class: "btn btn-danger" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!--datepicker用-->
<script>
    $( function() {
        $( "#datepicker" ).datepicker();
    } );
</script>
